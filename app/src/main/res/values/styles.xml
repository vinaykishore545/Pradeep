<resources xmlns:ns2="http://schemas.android.com/apk/res-auto">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">#fff</item>
       <item name="rippleColor">@color/colorPrimary</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton12" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="rippleColor">@color/colorPrimary</item>
    </style>



    <style name="Widget.MaterialComponents.Button.TextButton1" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/colorPrimary</item>
    </style>


    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/background</item>
    </style>

    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="materialThemeOverlay">@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox.Dense</item>
    </style>
    <style name="Rounded" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="android:background">@color/text</item>
        <item name="cornerSize">16dp</item>

    </style>

    <style name="NavigationDrawerStyleToolbar">
        <item name="android:textSize">16sp</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:stateListAnimator" ns2:ignore="NewApi">@animator/mtrl_btn_unelevated_state_list_anim</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="GreenTextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="checkBox" >
        <item name="checkboxStyle">@style/Widget.MaterialComponents.CompoundButton.CheckBox</item>
    </style>


    <style name="CircularProgressNew" parent="Theme.AppCompat.Light">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>


</resources>
