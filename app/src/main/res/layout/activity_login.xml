<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusableInTouchMode="true"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:id="@+id/container">
    <ScrollView
        android:layout_above="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_width="125dp"
                android:layout_height="62.2dp"
                android:layout_marginTop="100dp"
                android:layout_marginLeft="27dp"
                android:paddingLeft="5dp"
                android:paddingRight="12dp"
                android:src="@drawable/logo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:textColor="#4a4a4a"
                android:text="Welcome"
                android:fontFamily="@font/my_custom_font"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="20.8dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#848484"
                android:text="Sign in to continue"
                android:fontFamily="@font/my_custom_font_semi_bold"
                android:layout_marginLeft="32dp"
                />
            <LinearLayout
                android:id="@+id/editest123"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="33dp"
                app:hintTextAppearance="@style/GreenTextInputLayout"
                android:hint="Email"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                app:shapeAppearance="@style/Rounded"
                tools:ignore="HardcodedText">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColor="@color/text"
                    android:id="@+id/email"
                    android:paddingLeft="2dp"
                    android:fontFamily="@font/my_custom_font_semi_bold"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="14dp"
                android:layout_marginStart="33dp"
                android:layout_marginEnd="33dp"
                app:hintTextAppearance="@style/GreenTextInputLayout"
                android:hint="mobile"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                app:shapeAppearance="@style/Rounded"
                tools:ignore="HardcodedText">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:textColor="@color/text"
                    android:id="@+id/mobile"
                    android:paddingLeft="2dp"
                    android:fontFamily="@font/my_custom_font_semi_bold"
                    android:textSize="12sp"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp">

                <com.google.android.material.checkbox.MaterialCheckBox
                    android:id="@+id/check"
                    style="@style/checkBox"
                    app:useMaterialThemeColors="false"
                    android:layout_width="wrap_content"
                    android:textColor="#6a5c3b"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/my_custom_font_semi_bold"
                    android:text="Remember me"
                    android:buttonTint="#979797"/>
                <!--  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="12sp"
                      android:textColor="#6a5c3b"
                      android:text="Remember me"
                      android:layout_marginLeft="3dp"
                      android:fontFamily="@font/my_custom_font_semi_bold"
                      />-->
                <Button
                    android:id="@+id/forgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:textColor="#6a5c3b"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:text="Forgot Password?"
                    android:fontFamily="@font/my_custom_font_semi_bold"
                    android:gravity="right"

                    />

            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/but"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:layout_width="match_parent"
                app:shapeAppearance="@style/Rounded"
                android:layout_marginStart="33dp"
                android:layout_marginTop="17dp"
                android:textSize="18sp"
                android:fontFamily="@font/my_custom_font"
                android:layout_marginEnd="33dp"
                android:layout_height="60dp"
                app:rippleColor="@color/text"
                android:text="Login"
                tools:ignore="HardcodedText">
            </com.google.android.material.button.MaterialButton>
            <!--<TextView
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="33dp"
                android:background="@drawable/login_bg"
                android:layout_marginTop="19dp"
                android:gravity="center"
                android:text="Login"
                android:textColor="@color/white"
                android:fontFamily="@font/my_custom_font"
                android:textSize="16sp"/>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#6a5c3b"
                    android:text="New user?"
                    android:fontFamily="@font/my_custom_font_semi_bold"
                    />
                <Button
                    android:id="@+id/signup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:textColor="#6a5c3b"
                    android:textAllCaps="false"
                    android:text="Sign up"
                    android:layout_marginLeft="7dp"
                    android:fontFamily="@font/my_custom_font_semi_bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="#fafaed"
        android:textSize="14sp"
        android:fontFamily="@font/my_custom_font_semi_bold"
        android:textColor="#6a5c3b"
        android:text="Skip for now"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

</RelativeLayout>