<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:visibility="gone"
        android:background="@color/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:lineSpacingExtra="0sp"
            android:fontFamily="@font/my_custom_font"
            android:text="Account"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="23dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/ic_man"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#4a4a4a"
                android:text="Welcome"
                android:fontFamily="@font/my_custom_font_semi_bold"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#6a5c3b"
                android:lineSpacingExtra="-2sp"
                android:text="MR. Mickey Mouse"
                android:fontFamily="@font/my_custom_font"
                />
            <TextView
                android:id="@+id/name_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#6a5c3b"
                android:lineSpacingExtra="-2sp"
                android:text="LOGIN"
                android:padding="5dp"
                android:visibility="gone"
                android:fontFamily="@font/my_custom_font"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/orders"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:layout_marginTop="14dp"
        android:background="@drawable/edit_bg_copy_copy">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="18.1dp"
            android:src="@drawable/ic_returns"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="21dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#817763"
            android:textAllCaps="false"
            android:lineSpacingExtra="35sp"
            android:text="Orders &amp; Returns"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginLeft="25dp"

            android:fontFamily="@font/my_custom_font_semi_bold"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_bg_copy_copy">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="18.1dp"
            android:src="@drawable/ic_about"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="21dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#817763"
            android:lineSpacingExtra="35sp"
            android:text="About us"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginLeft="25dp"
        android:textAllCaps="false"
            android:fontFamily="@font/my_custom_font_semi_bold"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/contact"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_bg_copy_copy">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="18.1dp"
            android:src="@drawable/ic_contact"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="21dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#817763"
            android:textAllCaps="false"
            android:lineSpacingExtra="35sp"
            android:text="Contact us"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/my_custom_font_semi_bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_bg_copy_copy">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="18.1dp"
            android:src="@drawable/ic_follow"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="21dp"/>
        <Button
            android:id="@+id/follow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#817763"
            android:lineSpacingExtra="35sp"
            android:text="Follow Me"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/my_custom_font_semi_bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_bg_copy_copy">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="18.1dp"
            android:src="@drawable/ic_terms"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="21dp"/>
        <Button
            android:id="@+id/terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#817763"
            android:lineSpacingExtra="35sp"
            android:text="Terms and Conditions"
            android:textAllCaps="false"
            android:layout_marginLeft="25dp"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:fontFamily="@font/my_custom_font_semi_bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:background="@drawable/edit_bg_copy_copy">
        <ImageView
            android:layout_width="19dp"
            android:layout_height="18.1dp"
            android:src="@drawable/ic_logout"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="21dp"/>
        <Button
            android:id="@+id/tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#817763"
            android:lineSpacingExtra="35sp"
            android:textAllCaps="false"
            android:text="Logout"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_marginLeft="25dp"
            android:fontFamily="@font/my_custom_font_semi_bold"
            />
    </LinearLayout>
</LinearLayout>